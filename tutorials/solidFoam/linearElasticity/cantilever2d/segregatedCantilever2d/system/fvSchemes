FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

d2dt2Schemes
{
    default     steadyState;
}

ddtSchemes
{
    default     steadyState;
}

gradSchemes
{
     default                 extendedLeastSquares 0;
}

divSchemes
{
    default                 Gauss linear;
    fvmDiv(sigma)           pointGaussLeastSquares;
}

laplacianSchemes
{
    default                 none;
    fvmBlockLaplacian(D)    pointGaussLeastSquares;
    laplacian(DD,D)         Gauss linear corrected;
}

snGradSchemes
{
    default                 none;
}

interpolationSchemes
{
    default                 linear;
}

