#!/bin/bash
cd ${0%/*} || exit 1    # run from this directory

# Download ThirdParty software
(cd ThirdParty && ./Allwmake)
if [ $? -ne 0 ]
then
    echo "Please fix the ThirdParty errors above!"
    exit 1
fi

# Compile libraries
(cd src && ./Allwmake)

# Compile applications
(cd applications && ./Allwmake)
